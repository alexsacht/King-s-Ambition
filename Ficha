	<label text="HP:" horzTextAlign="trailing" width="40" fontColor="black" top="15" />	

	<edit field="hp" horzTextAlign="center" width="30" fontColor="black" left="50" top="10" />

	<label text="+" horzTextAlign="trailing" width="15" fontColor="black" top="15" left="85" fontSize="20"/>

	<edit field="hp2" horzTextAlign="center" width="30" fontColor="black" left="105" top="10" />	

	<label text="=" horzTextAlign="trailing" width="15" fontColor="black" top="15" left="140" fontSize="20"/>

	<label field="totalhp" horzTextAlign="center" width="40" fontColor="black" top="15" left="160" fontStyle="italic"/>

	<dataLink fields="{'hp','hp2'}">

		<event name="onChange">
	
		sheet.totalhp = (tonumber(sheet.hp) or 0) +
						(tonumber(sheet.hp2) or 0);

			if	sheet.totalhp > 0 then
				sheet.totalhp = "+" .. sheet.totalhp;
			end;

		</event>

	</dataLink>


<label text="ATK:" horzTextAlign="trailing" width="40" fontColor="black" top="50" />	

